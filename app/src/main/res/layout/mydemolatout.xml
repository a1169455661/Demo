<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/home">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="催收神器"
                android:layout_marginTop="20px"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/title"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_person"
                android:layout_below="@+id/title"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/headImage"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="V 1.0.1"
                android:layout_below="@+id/headImage"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_line"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/one"
                    android:clickable="true"
                    android:onClick="onClick">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/ic_Image"
                        android:background="@mipmap/ic_person"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_Image"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:text="催收工单"
                        android:id="@+id/ont_title"
                        android:gravity="center"/>

                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:background="@color/gray_line"
                    ></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/tow"
                    android:clickable="true"
                    android:onClick="onClick">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/dic"
                        android:background="@mipmap/ic_person"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="催收工单中"
                        android:id="@+id/tow_title"
                        android:layout_below="@+id/dic"
                        android:layout_marginTop="2dp"
                        android:gravity="center"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:background="@color/gray_line"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/three"
                    android:onClick="onClick">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/ic_person"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/dicc"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GPS追踪"
                        android:id="@+id/three_text"
                        android:layout_below="@+id/dicc"
                        android:gravity="center"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:id="@+id/four">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/ic_person"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/tow_dic"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="费用减免"
                        android:layout_below="@+id/tow_dic"
                        android:gravity="center"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:background="@color/gray_line"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/five">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/ic_person"
                        android:id="@+id/tow_image"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tow_image"
                        android:gravity="center"
                        android:text="结清照片"/>
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_line"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/six">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/ic_person"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/tow_dicc"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="临时催收车"
                        android:layout_below="@+id/tow_dicc"
                        android:gravity="center"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"></View>
        </LinearLayout>
    </LinearLayout>


</ScrollView>